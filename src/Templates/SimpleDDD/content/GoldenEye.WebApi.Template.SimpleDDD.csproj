<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Version>1.0.0</Version>
    <PackageId>GoldenEye.WebApi.Template.SimpleDDD</PackageId>
    <RootNamespace>GoldenEye.WebApi.Template.SimpleDDD</RootNamespace>
    <AssemblyName>GoldenEye.WebApi.Template.SimpleDDD</AssemblyName>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="10.1.1" />
    <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="8.1.0" />
    <PackageReference Include="GoldenEye.Backend.Core" Version="8.0.0-alpha3" />
    <PackageReference Include="GoldenEye.Backend.Core.DDD" Version="10.0.0-alpha3" />
    <PackageReference Include="GoldenEye.Backend.Core.Marten" Version="9.0.0-alpha3" />
    <PackageReference Include="GoldenEye.Backend.Core.WebApi" Version="8.0.0-alpha3" />
    <PackageReference Include="GoldenEye.Shared.Core" Version="7.0.0-alpha3" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
